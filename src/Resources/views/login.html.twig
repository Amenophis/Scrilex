<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link href="{{ app.request.basePath }}/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="{{ app.request.basePath }}/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
        <link href="{{ app.request.basePath }}/css/style.css" rel="stylesheet" type="text/css" />
        <script src="{{ app.request.basePath }}/js/jquery.js"></script>
        <script src="{{ app.request.basePath }}/js/jquery-ui.min.js"></script>
        <script type="text/javascript" src="{{ app.request.basePath }}/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="{{ app.request.basePath }}/js/scrilex.js"></script>
        <!--<script type="text/javascript" src="{{ app.request.basePath }}/js/bootstrap-dropdown.js"></script>
        <script type="text/javascript" src="{{ app.request.basePath }}/js/bootstrap-twipsy.js"></script>
        <script type="text/javascript" src="{{ app.request.basePath }}/js/bootstrap-modal.js"></script>
        <script type="text/javascript" src="{{ app.request.basePath }}/js/bootstrap-tabs.js"></script>
        <script type="text/javascript" src="{{ app.request.basePath }}/js/scrilex.js"></script>-->
        <title>Scrilex</title>
        
        <style type="text/css">
            body {
              padding-top: 40px;
              padding-bottom: 40px;
              background-color: #f5f5f5;
            }

            .form-signin {
              max-width: 300px;
              padding: 19px 29px 29px;
              margin: 0 auto 20px;
              background-color: #fff;
              border: 1px solid #e5e5e5;
              -webkit-border-radius: 5px;
                 -moz-border-radius: 5px;
                      border-radius: 5px;
              -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                 -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                      box-shadow: 0 1px 2px rgba(0,0,0,.05);
            }
            .form-signin .form-signin-heading,
            .form-signin .checkbox {
              margin-bottom: 10px;
            }
            .form-signin input[type="text"],
            .form-signin input[type="password"] {
              font-size: 16px;
              height: auto;
              margin-bottom: 15px;
              padding: 7px 14px;
            }

        </style>
        
        {% block header %}{% endblock %}
    </head>
    <body>            
        <div class="container">
            <form action="{{ path('login_check') }}" method="post" class="form-signin">
                <h2>Please sign in</h2>
                {% if error %}
                <div class="alert alert-error">{{ error }}</div>
                {% endif %}
                
                <input type="text" placeholder="Your login" class="input-xlarge" id="username" name="_username" value="{{ last_username }}" />
                <input type="password" placeholder="Your password" class="input-xlarge" id="password" name="_password" />
                {#<label class="checkbox">
                    <input type="checkbox" value="remember-me"> Remember me
                </label>#}
                <button class="btn btn-large btn-primary" type="submit">Sign in</button>
            </form>
        </div>
    </body>
</html>